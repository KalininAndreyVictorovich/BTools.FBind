<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net40;netstandard2.0</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <RootNamespace>BTools</RootNamespace>
    
    <PackageId>BTools.FBind</PackageId>
    <Version>2.0.0-alpha1</Version>
    <Authors>Andrey Kalinin</Authors>
    <Description>Binding for Windows Forms</Description>
    <PackageProjectUrl>https://github.com/KalininAndreyVictorovich/BTools.FBind</PackageProjectUrl>
    <RepositoryUrl>https://github.com/KalininAndreyVictorovich/BTools.FBind</RepositoryUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>Unlicense</PackageLicenseExpression>
    <PackageTags>Winforms windows forms binding</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All"/>
  </ItemGroup>
</Project>
